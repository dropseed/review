#!/bin/bash
set -e
cd "$(dirname "$0")/.."

echo "=== TypeScript Type Check ==="
npx tsc --noEmit
echo "TypeScript type check passed!"

echo ""
echo "=== TypeScript Tests ==="
npm test
echo "TypeScript tests passed!"

echo ""
echo "=== Rust Tests ==="
cargo test --features symbols-all
echo "Rust tests passed!"

echo ""
echo "=== All tests passed! ==="
