#!/bin/bash
set -e
# Resolve symlinks to get the actual script location (macOS compatible)
SOURCE="${BASH_SOURCE[0]}"
while [ -L "$SOURCE" ]; do
  DIR="$(cd "$(dirname "$SOURCE")" && pwd)"
  SOURCE="$(readlink "$SOURCE")"
  [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE"
done
cd "$(dirname "$SOURCE")/.."

(cd desktop && npx prettier --check "../*.md" "ui/**/*.{ts,tsx}" "*.{js,json}")

cargo fmt --check
