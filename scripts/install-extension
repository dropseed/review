#!/bin/bash
set -e
cd "$(dirname "$0")/.."

# Build first if .vsix doesn't exist or is older than source
if [ ! -f vscode/human-review.vsix ] || [ vscode/src -nt vscode/human-review.vsix ]; then
  scripts/build
fi

code --install-extension vscode/human-review.vsix --force

echo ""
echo "Extension installed. Reload VS Code to activate."
