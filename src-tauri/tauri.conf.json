{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Review",
  "mainBinaryName": "Review",
  "version": "0.0.1",
  "identifier": "com.dropseed.review",
  "build": {
    "beforeDevCommand": "./scripts/start-vite",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Loading...",
        "width": 1100,
        "height": 750,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600,
        "tabbingIdentifier": "review-main",
        "backgroundColor": "#0c0a09"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png"]
  }
}
